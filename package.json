{
  "name": "y-grid",
  "version": "1.0.0",
  "type": "module",
  "description": "a high performance web grid / spreadsheet component",
  "types": "src/index.d.ts",
  "main": "dist/y-grid.js",
  "module": "dist/y-grid.js",
  "files": [
    "assets",
    "dist",
    "src"
  ],
  "author": "myliang <liangyuliang0335@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/myliang/x-spreadsheet.git"
  },
  "scripts": {
    "dev": "concurrently \"vite build --watch\" \"serve -l 8080\" \"sleep 1 && open http://localhost:8080/demo/index.html\"",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "biome check src",
    "lint:fix": "biome check --write src",
    "format": "biome format --write src",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "javascript",
    "spreadsheet",
    "canvas"
  ],
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@types/node": "^22.19.1",
    "@vitest/coverage-v8": "^4.0.14",
    "concurrently": "^9.2.1",
    "less": "^3.8.1",
    "serve": "^14.2.5",
    "typescript": "^5.9.3",
    "vite": "^5.4.0",
    "vitest": "^4.0.14"
  }
}
